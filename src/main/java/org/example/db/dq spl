SELECT B.*,U.nickname
FROM board AS B
INNER JOIN `user` AS U
ON B.userId = U.id;

SELECT R.*,U.nickname
FROM review AS R
INNER JOIN `user` AS U
ON R.userId = U.id
WHERE U.nickname LIKE '짱%';

SELECT R.*,U.nickname
FROM review AS R
INNER JOIN `user` AS U
ON R.userId = U.id
WHERE `boardTitle` LIKE '루%';

SELECT B.*,U.nickname
FROM `board` AS B
INNER JOIN `user` AS U
ON B.userId = U.id
WHERE U.nickname LIKE '짱%';

SELECT B.*,U.nickname
FROM `board` AS B
INNER JOIN `user` AS U
ON B.userId = U.id
WHERE `title` LIKE '젠%';






